{
  "name": "collaborative-drawing-platform",
  "version": "2.0.0",
  "description": "Professional collaborative drawing platform with HTTPS/SSH support",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && nodemon index.js",
    "server:start": "cd server && node index.js",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "npm run client:build",
    "start": "npm run server:start"
  },
  "keywords": ["drawing", "collaborative", "real-time", "secure"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
